<% layout("/layouts/boilerplate") %>

    <div class="row mt-2">
      <div class="col-8 offset-2">


    <h3>Edit Listing Details </h3>
    <form method="POST" novalidate 
    action="/listings/<%=listing._id%>?_method=PUT" 
    class="needs-validation"
    enctype="multipart/form-data">
      <div class="mb-4">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" 
               placeholder="Add catchy title"
               type="text"
               required
               value="<%=listing.title %>"
               class="form-control"/>
               <div class="invalid-feeadback">Title  is required.</div>
      </div>

      <div class="mb-4" >
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" 
        placeholder="enter description"
        class="form-control"
        required
        >
        <%=listing.description %>
      </textarea>
      <div class="invalid-feeadback">Description  is required.</div>
      </div>

      <!-- <div class="mb-4">
        <label for="image" class="form-label">Image</label>
        <input name="listing[image]" 
               placeholder="enter image url/link"
               type="text"
               value="<%=listing.image %>"
               class="form-control"
               required/>
               <div class="invalid-feeadback">Image  is required.</div>
      </div> -->
      <div class="mb-4">
        Original Listing Image<br/>
        <img src="<%= originalImageUrl %>">
      </div>
      <div class="mb-4">
        <label for="image" class="form-label">Upload New Image</label>
        <input name="listing[image]" 
               type="file"
               class="form-control"
               />
      </div>
      <div class="row">
        <div class="mb-4 col-md-4">
          <label for="price" cla ss="form-label">Price</label>
          <input name="listing[price]" 
                 placeholder="enter price"
                 type="text"
                 value="<%=listing.price %>"
                 class="form-control"
                 required/>
                 <div class="invalid-feeadback">Price</div>
        </div>
        <div class="mb-4 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" 
                 placeholder="ex. India"
                 type="text"
                 value="<%=listing.country %>"
                 class="form-control"
                 required/>
                 <div class="invalid-feeadback">Country is required</div>
        </div>
      </div>
      
      <div class="mb-4 ">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" 
               placeholder="enter location"
               type="text"
               value="<%=listing.location %>"
               class="form-control"
               required

            />
            <div class="invalid-feeadback">Location is required</div>
      </div>

      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
  </div>