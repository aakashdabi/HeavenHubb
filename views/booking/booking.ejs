<% layout("/layouts/boilerplate") %>

<div class="container">
  <h2>Book Listing: <%= listing.title %></h2>

  <!-- Booking form -->
  <form method="POST" action="/listings/<%= listing._id%>/booking">
    <!-- Hidden input field to store the listing ID -->
    <input type="hidden" name="listingId" value="<%= listing._id %>">
    
    <!-- Input fields for booking details -->
    <div class="form-group">
      <label for="name">Your Name:</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>
    
    <div class="form-group">
      <label for="email">Your Email:</label>
      <input type="email" class="form-control" id="email" name="email" required>
    </div>
    
    <div class="form-group">
      <label for="date">Date of Booking:</label>
      <input type="date" class="form-control" id="date" name="date" required>
    </div>
    
    <!-- Additional input fields for booking details such as time, number of guests, etc. -->
    
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary">Submit Booking</button>
  </form>
</div>
